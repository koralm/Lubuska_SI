extends demo_top

block scripts
    script.
        $(document).ready(function () {
            var Dtable = $('#example').DataTable({
                            columnDefs: [{
                                targets: [0],
                                orderData: [0, 1]
                            }, {
                                targets: [1],
                                orderData: [1, 0]
                            }]
                        });

            $('#example tbody').on('click', 'tr', function () {
                var data = Dtable.row(this).data();
                if (data[0]=="Projekt 1") {
                    window.location = "/demo/LSI/proj1"
                }
                else{
                    alert('Znajdujesz się w wersji DEMO');
                }
            });
        });

