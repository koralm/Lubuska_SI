extends demo_top

block scripts
    script.
        $(document).ready(function () {
            $('#DLSImem').select2();
            $("#DLSIMemb").hide()
        })

        function dupa(data){
            if (data==1){
                $("#DLSIMemb").hide();
            }
            else{
                $("#DLSIMemb").show();
            }
        }


block demo_body
    .container.index_margin1_2
        h1 Projekt własny
    .container.tab_margin.test
        h3 Dodawanie projektu:
        hr
        form
            fieldset.form-group
                label(for='Dexampletitle') Nazwa projektu:
                input#Dexampletitle.form-control(type='text', placeholder='Nazwa projektu')
            fieldset.form-group
                label(for='Dshortdescription') Krótki opis projektu:
                textarea#Dshortdescription.form-control(rows='3', placeholder='Opis projektu ...')
            fieldset.form-group
                label(for='Dlongdescription') Długi opis projektu:
                textarea#Dlongdescription.form-control(rows='6', placeholder='Szczegółowy opis projektu ...')
            fieldset.form-group
                label Rodzaj projektu:
                .checkbox
                    label.checkbox-inline
                        input#Dprojtype1(type='checkbox', value='option1')
                        |  Zwykły
                    label.checkbox-inline
                        input#Dprojtype2(type='checkbox', value='option2')
                        |  Badawczy
                    label.checkbox-inline
                        input#Dprojtype3(type='checkbox', value='option3')
                        |  Wdrożeniowy
            fieldset.form-group
                label(for='DUEdonation') Orientacyjny budżet:
                input#DUEdonation.form-control(type='text', placeholder='Budżet projektu')
            fieldset.form-group
                label Projekt z dofinansowaniem UE:
                .radio
                    label.radio-inline
                        input#DUEfundedY(type='radio', name='UEfunded', value='DUEFundedY', checked='')
                        |       Tak
                    label.radio-inline
                        input#DUEfundedN(type='radio', name='UEfunded', value='DUEFundedN')
                        |       Nie
            fieldset.form-group
                label Projekt kierowany do wszystkich
                .radio
                    label.radio-inline
                        input#DPartall(type='radio', name='DPartner', value='Dpartall', checked='', onclick='dupa(1)')
                        |       Tak
                    label.radio-inline
                        input#DPartsome(type='radio', name='DPartner', value='Dpartsome', onclick='dupa(0)')
                        |       Nie
            fieldset#DLSIMemb.form-group
                label Wybierz preferowanych partnerów
                select.form-control(id="DLSImem", multiple='multiple')
                    option(value='U1') Partner1
                    option(value='U2') Partner2
                    option(value='U3') Partner3
                    option(value='U4') Partner4
            fieldset.form-group
                label Rodzaj poszukiwanego partnera:
                .checkbox
                    label.checkbox-inline
                        input#Dpart1(type='checkbox', value='option1')
                        |  Kooperant
                    label.checkbox-inline
                        input#Dpart2(type='checkbox', value='option2')
                        |  Podwykonawca
                    label.checkbox-inline
                        input#Dpart3(type='checkbox', value='option3')
                        |  Konsorcjant
                    label.checkbox-inline
                        input#Dpart4(type='checkbox', value='option3')
                        |  Finansowy
            fieldset
                label Oczekiwania w stosunku do partnera:
                .form.col-lg-offset-1
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Dinputprec') Procentowy udział w projekcie:
                        .col-sm-9
                            input#Dinputprec.form-control(placeholder='% udziału')
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Dpeople') Kadra:
                        .col-sm-9
                            input#Dpeople.form-control(placeholder='Wymagana kadra')
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Deq') Sprzęt:
                        .col-sm-9
                            input#Deq.form-control(placeholder='Wymagany sprzęt')
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Dcert') Certyfikaty:
                        .col-sm-9
                            input#Dcert.form-control(placeholder='Wymagane certyfikaty')
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Dexp') Doświadczenie:
                        .col-sm-9
                            input#Dexp.form-control(placeholder='Wymagane doświadczenie')
                    .form-group.row
                        label.col-sm-3.form-control-label(for='Dgold') Środki finansowe partnera:
                        .col-sm-9
                            input#Dgold.form-control(placeholder='Środki finansowe własne włożone do projektu przez partnera')
            fieldset.form-group
                label(for='exampleInputFile') Dodaj plik
                input#exampleInputFile.form-control-file(type='file')
                small.text-muted
                    | Tutaj możesz załączyć swoje pliki dotyczące projektu
            button.btn.btn-lg.btn-primary(type='submit') Zgłoś projekt
